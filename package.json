{
  "name": "useglobal",
  "version": "1.0.0-beta3",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "lib"
  ],
  "private": false,
  "sidEffects": false,
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "watch:build": "nodemon --watch ./src -x \"npm run build\" -e js,ts,tsx",
    "watch:test": "nodemon --watch ./src -x \"npm run coverage\" -e js,ts,tsx",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "test": "jest",
    "coverage": "jest --coverage",
    "release": "standard-version",
    "publish": "git push --follow-tags",
    "prettier": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test && npm run lint"
    }
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.18.6",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/jest": "^29.4.0",
    "@types/node": "18.11.18",
    "@types/react": "18.0.27",
    "@types/webpack-env": "1.18.0",
    "babel-jest": "29.4.1",
    "concurrently": "7.6.0",
    "husky": "8.0.3",
    "jest": "29.4.1",
    "jest-localstorage-mock": "^2.4.26",
    "jsdom": "21.1.0",
    "jsdom-global": "3.0.2",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "onchange": "7.1.0",
    "prettier": "2.8.3",
    "pretty-quick": "3.1.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "standard-version": "^9.5.0",
    "ts-jest": "29.0.5",
    "tsconfigs": "5.0.0",
    "typescript": "4.9.5",
    "wait-on": "7.0.1"
  },
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "Patrick Kelly",
  "license": "MIT",
  "description": "TypeScript NPM Package Starter",
  "repository": {
    "type": "git",
    "url": "git://github.com/patomation/useGlobal.git"
  },
  "public": true,
  "keywords": [
    "typescript"
  ],
  "ava": {
    "files": [
      "build/**/*.test.js"
    ]
  },
  "dependencies": {
    "@testing-library/react": "^13.4.0"
  }
